<?xml version="1.0" encoding="utf-8"?>

<openerp>
    <data>

        <record id="view_lengow_manual_import_wizard_form" model="ir.ui.view">
            <field name="model">lengow.manual.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Lengow Manual Import">
                    <group>
                        <field name='id_flux'/>
                        <field name='id_order'/>
                    </group>
                    <footer>
                        <button string="Import" name="run"
                                type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_lengow_manual_import_wizard" model="ir.actions.act_window">
            <field name="name">Lengow Manual Import</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lengow.manual.import.wizard</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_lengow_manual_import_wizard_form"/>
            <field name="groups_id" eval="[(4, ref('group_lengow_manager'))]"/>
        </record>

    </data>
</openerp>
